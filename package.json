{
  "name": "karlog-frontend",
  "version": "1.0.0",
  "description": "An Electron application with Vue and TypeScript",
  "main": "./out/main/index.js",
  "author": "example.com",
  "homepage": "https://electron-vite.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "cross-env NODE_ENV=production npm run build && electron-builder --win --publish=always",
    "build:mac": "cross-env NODE_ENV=production npm run build && electron-builder --mac --publish=always", 
    "build:linux": "cross-env NODE_ENV=production npm run build && electron-builder --linux --publish=always",
    "build:release": "cross-env NODE_ENV=production npm run build && electron-builder --publish=always",
    "check-updates": "echo 'Checking for updates manually...' && npm run dev -- --check-updates"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@serialport/parser-readline": "^13.0.0",
    "@vueuse/core": "^12.4.0",
    "axios": "^1.7.9",
    "chart.js": "^4.4.7",
    "electron-updater": "^6.1.7",
    "lucide-vue-next": "^0.471.0",
    "nfc-pcsc": "^0.8.1",
    "pinia": "^2.3.1",
    "serialport": "^13.0.0",
    "uuid": "^11.0.5",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "electron-rebuild": "^3.2.9",
    "@electron-toolkit/eslint-config": "^1.0.2",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/rebuild": "^3.7.1",
    "@rushstack/eslint-patch": "^1.10.3",
    "@types/node": "^20.14.8",
    "@types/vue-router": "^2.0.0",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "cross-env": "^7.0.3",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.26.0",
    "prettier": "^3.3.2",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vue": "^3.4.30",
    "vue-tsc": "^2.0.22"
  }
}
